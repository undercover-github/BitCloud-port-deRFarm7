  BOARDCFLAGS += -D_LIGHT_SENSOR_
  BOARDCFLAGS += -D_BATTERY_SENSOR_
  BOARDCFLAGS += -D_LEDS_
  BOARDCFLAGS += -D_SLIDERS_
  BOARDCFLAGS += -DBSP_MNZB_EVB_SUPPORT=1
endif

